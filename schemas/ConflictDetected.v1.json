{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://life-systems.local/schemas/ConflictDetected.v1.json",
  "title": "ConflictDetected",
  "description": "Published by SYNTH when domain conflicts arise",
  "type": "object",
  "required": ["eventId", "timestamp", "version", "source", "data"],
  "properties": {
    "eventId": {"type": "string", "format": "uuid"},
    "timestamp": {"type": "string", "format": "date-time"},
    "version": {"type": "string", "const": "v1"},
    "source": {"type": "string", "const": "SYNTH"},
    "data": {
      "type": "object",
      "required": ["conflictId", "domains", "description"],
      "properties": {
        "conflictId": {"type": "string"},
        "domains": {
          "type": "array",
          "items": {"type": "string"}
        },
        "description": {"type": "string"},
        "severity": {
          "type": "string",
          "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
        }
      }
    }
  }
}
