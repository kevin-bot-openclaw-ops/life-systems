{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://life-systems.local/schemas/WeightsAdjusted.v1.json",
  "title": "WeightsAdjusted",
  "description": "Published by LEARN when scoring weights are updated",
  "type": "object",
  "required": ["eventId", "timestamp", "version", "source", "data"],
  "properties": {
    "eventId": {"type": "string", "format": "uuid"},
    "timestamp": {"type": "string", "format": "date-time"},
    "version": {"type": "string", "const": "v1"},
    "source": {"type": "string", "const": "LEARN"},
    "data": {
      "type": "object",
      "required": ["targetContext", "weights"],
      "properties": {
        "targetContext": {
          "type": "string",
          "enum": ["DISC", "APPL", "CRST"]
        },
        "weights": {
          "type": "object",
          "description": "New scoring weights"
        },
        "reason": {"type": "string"}
      }
    }
  }
}
