{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://life-systems.local/schemas/StrategyReportPublished.v1.json",
  "title": "StrategyReportPublished",
  "description": "Published by CRST with career strategy advice",
  "type": "object",
  "required": ["eventId", "timestamp", "version", "source", "data"],
  "properties": {
    "eventId": {"type": "string", "format": "uuid"},
    "timestamp": {"type": "string", "format": "date-time"},
    "version": {"type": "string", "const": "v1"},
    "source": {"type": "string", "const": "CRST"},
    "data": {
      "type": "object",
      "required": ["reportId", "strategyType", "recommendations"],
      "properties": {
        "reportId": {"type": "string"},
        "strategyType": {
          "type": "string",
          "enum": ["SHORT_TERM", "LONG_TERM", "PIVOT", "OPTIMIZATION"]
        },
        "recommendations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "priority": {"type": "string", "enum": ["HIGH", "MEDIUM", "LOW"]},
              "action": {"type": "string"},
              "rationale": {"type": "string"},
              "timeframe": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
