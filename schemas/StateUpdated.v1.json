{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://life-systems.local/schemas/StateUpdated.v1.json",
  "title": "StateUpdated",
  "description": "Published by SYNTH when synthesized state changes",
  "type": "object",
  "required": ["eventId", "timestamp", "version", "source", "data"],
  "properties": {
    "eventId": {"type": "string", "format": "uuid"},
    "timestamp": {"type": "string", "format": "date-time"},
    "version": {"type": "string", "const": "v1"},
    "source": {"type": "string", "const": "SYNTH"},
    "data": {
      "type": "object",
      "required": ["stateSnapshot"],
      "properties": {
        "stateSnapshot": {
          "type": "object",
          "description": "Current synthesized view of all domains",
          "properties": {
            "career": {"type": "object"},
            "dating": {"type": "object"},
            "relocation": {"type": "object"},
            "health": {"type": "object"}
          }
        }
      }
    }
  }
}
